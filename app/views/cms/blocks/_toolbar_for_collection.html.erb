<% able_to? :publish_content do -%>
  <%= link_to span_tag(t "blocks.toolbar_for_collection.publish"), "#", 
    :class => "http_put button disabled left", 
    :id => "publish_button" %>
<% end -%>

<%= link_to span_tag(t "blocks.toolbar_for_collection.view_content"), "#", 
  :id => "view_button", 
  :class => "button disabled#{ ' off' if action_name == 'show'} middle" %>
  
<%= link_to span_tag(t "blocks.toolbar_for_collection.edit_content"), "#", 
  :id => "edit_button", 
  :class => "button disabled#{ ' off' if action_name == 'edit'} right" %>

<%= link_to span_tag(t "blocks.toolbar_for_collection.add_content"), cms_new_path_for(content_type), 
  :id => "add_button", 
  :class => "spacer button#{ ' off' if action_name == 'new'}" %>
  
<%= link_to span_tag(t "blocks.toolbar_for_collection.list_versions"), "#", 
  :id => "revisions_button", 
  :class => "button #{ action_name == 'revisions' ? ' off' : ' disabled'}" %>
  
<%= link_to span_tag("<span class=\"delete_img\">&nbsp;</span>#{t "blocks.toolbar_for_collection.delete"}"), "#", 
  :id => "delete_button", 
  :class => "spacer button disabled http_delete confirm_with_title", 
  :title => t("blocks.toolbar_for_collection.confirm") %>
