<div class="fields text_fields">
  <% if cms_options[:label] %>
    <%= f.label meth:od, cms_options[:label] %>
  <% else %>
    <%= f.label method %>
  <% end %>
  <% modelname = f.object.class.name.underscore %>
  <% methodname = method.to_s %>
  <% htmlid = modelname + '_' + methodname + '_1i' %>
  <% htmlname = modelname + '[' + methodname + '(1i)]' %>
  <%= select_year f.object.send(method), options, :id => htmlid, :name => htmlname %>
  <% if cms_options[:instructions] %>
    <div class="instructions"><%=h cms_options[:instructions] %></div>
    <br clear="all"/>  
  <% end %>  
</div>
