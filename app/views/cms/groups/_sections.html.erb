<div class="checkbox_group fields">
  <label><%= t "groups.sections.section_permissions" %></label>
  <%= hidden_field_tag "group[section_ids][]", "" %>
  <div class="checkboxes">
  <% Section.all(:order => "path").each do |s|%>
  <div class="checkbox_fields">
    <%= check_box_tag "group[section_ids][]", s.id, @group.sections.include?(s), :id => "section_ids_#{s.id}", :class => "section_ids" %>
    <label for= "section_ids_<%= s.id %>" style="width: 400px; padding-top: 0; #padding-top: 4px;"><%=h s.name %><span style="padding-top: 0; font-weight: lighter; display: inline; float: none;">(<%= t "groups.sections.path" %>: <%=h s.path %>)</span></label>
  </div>
  <% end %>
  <div class="instructions"><%= t "groups.sections.instructions" %> <span id="section-action"><%= @group.cms_access? ? t("groups.sections.edit") : t("groups.sections.view") %></span>?</div>
  <div class="check_uncheck">
    <%= link_to_check_all 'input.section_ids' %>, 
    <%= link_to_uncheck_all 'input.section_ids' %>
  </div>
  </div>
  <br clear="all" />
  <div style="clear: all;"></div>
</div>
